extends ../node_modules/jade-bootstrap/_bootstrap

append styles
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/skeleton.css')

block body
    include navBar
    include sidebar
    .container
        .row
            #itemPhoto.col-md-3
                br
                br
                br
                if photoSRC == '' /* If there is no image for the item */
                    img(src="images/defaultImg.png" style="width:200px;")

                else
                    // Click on photo to view enlarged item photo
                    a(href='#{photoSRC}', data-toggle='modal', data-target='#photoModal')
                        img(src='#{photoSRC}', style="width:200px;")

                    // Modal to view enlarged item photo
                    #photoModal.modal.fade(role='dialog')
                        .modal-dialog
                           .modal-content
                               .modal-header
                                   button.close(type='button', data-dismiss='modal') Ã—
                                   h4.modal-title #{itemName}
                               .modal-body
                                   img(src='#{photoSRC}', style="width:500px;")
                               .modal-footer
                                   button.btn.btn-success(type='button', data-dismiss='modal') Close

                #editItemBtn.col-sm-12
                    br
                    a(href='/editItem?id=#{itemid} ')
                        button.btn.btn-success Edit


            #itemDetails.col-md-9
                br
                br
                br
                .panel.panel-success
                    // Default panel contents
                    .panel-heading
                        b #{itemName}
                    .panel-body
                        p #{itemDesc}
                    // List group
                    ul.list-group
                        li.list-group-item
                            b Category:
                            |  #{itemCategory}
                        li.list-group-item
                            b Date Found:
                            |  #{itemDateFound}
                        li.list-group-item
                            b Location Found:
                            |  #{itemLocFound}
                        li.list-group-item
                            b Currently held in (Campus Location):
                            |  #{itemCampusLoc}
                        if itemReturnStatus != null && itemReturnStatus != 'Return Status'
                            li.list-group-item
                                b Return Status:
                                |  #{itemReturnStatus}
                        if itemReturnStatus == 'Returned to Owner'
                            li.list-group-item
                                b Date Returned:
                                | #{itemDateReturned}

    include footer
